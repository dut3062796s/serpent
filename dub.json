{
	"authors": [
		"Ikey Doherty"
	],
	"configurations": [
		{
			"excludedSourceFiles": [
				"source/app.d",
				"source/game/*.d",
			],
			"name": "library",
			"targetType": "none"
		},
		{
			"name": "demo",
			"targetType": "executable"
		}
	],
	"copyright": "Copyright Â© 2019 Lispy Snake, Ltd.",
	"dependencies": {
		"bindbc-bgfx": {
			"path": "external/bindbc-bgfx",
		},
		"bindbc-loader": {
			"path": "external/bindbc-loader",
		},
		"bindbc-sdl": {
			"path": "external/bindbc-sdl",
		},
		"gfm": {
			"path": "external/gfm",
		}
	},
	"description": "Serpent Game Framework",
	"libs": [
		"SDL2", "SDL2_image",
		"bgfxRelease", "bxRelease", "bimgRelease",
		"stdc++", "GL", "x11", "bxRelease",
	],
	"lflags": ["-L../serpent-support/runtime/lib"],
	"license": "ZLib",
	"name": "serpent",
	"subConfigurations": {
		"bindbc-bgfx": "staticBC",
		"bindbc-sdl": "staticBC"
	},
	"targetType": "none",
	"versions": [
		"BindSDL_Static",
		"BindSDL_Image",
		"SDL_205",
	],
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "optimize"],
			"dflags-dmd": ["-g"],
			"dflags-ldc": ["-g", "-O2"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"dflags-ldc": ["-flto=thin", "--relocation-model=pic"]
		}
	}
}
